<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="remote_inspection_unit_control.MainWindow"
        Title="MainWindow" 
		x:Name="mainWindow"
		Height="600" 
		Width="900"
		WindowStartupLocation="CenterScreen" 
		ResizeMode="NoResize"
		Style="{StaticResource basicWindow}"
		>


    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            GlassFrameThickness="0,0,0,1"
                            ResizeBorderThickness="5" />
    </shell:WindowChrome.WindowChrome>

	<Grid x:Name="layoutRoot" Background="#FFF1F1F1">
		<Grid.Style>
		<Style TargetType="{x:Type Grid}">
      <Style.Triggers>
		<DataTrigger Binding="{Binding ElementName=mainWindow,
                                                   Path=WindowState}" 
                                 Value="Maximized">
								  <Setter Property="Margin" Value="8,8,8,8" />
                    </DataTrigger>
      </Style.Triggers>
    </Style>
	</Grid.Style>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="300" />
			<RowDefinition Height="22" />
			<RowDefinition Height="223.4"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="450" />
			<ColumnDefinition Width="340*" />
			<ColumnDefinition Width="103*"/>
		</Grid.ColumnDefinitions>
		<MediaElement x:Name="Player" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" Margin="10,48.46,0,10" Width="430" Source="harry2.mp4" />
		<Canvas Grid.Row="1" HorizontalAlignment="Right" Height="241.54" VerticalAlignment="Top" Width="432" Background="#FF3D78A7" Margin="0,48.46,10,0" Grid.ColumnSpan="2" Grid.Column="1" UseLayoutRounding="False"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0" Grid.Column="2" Height="30" Width="78">
			<Button x:Name="Minimize" Click="btnMinClick" ToolTip="Minimize" Style="{StaticResource basicButton}" Content="0" FontFamily="Marlett" IsCancel="True" Width="26" Background="#00000000" />
			<Button x:Name="Maximize" Click="btnMaxClick" ToolTip="Maximize" Style="{StaticResource basicButton}" FontFamily="Marlett" Content="1" Width="26" Background="Transparent"/>
			<Button x:Name="Close" Click="btnExitClick" ToolTip="Close"  Style="{StaticResource exitButton}" FontFamily="Marlett" Content="r" Width="26" Background="Transparent"/>
		</StackPanel>
		<ListBox x:Name="logList" HorizontalAlignment="Right" Height="225.4" VerticalAlignment="Top" Width="432" Margin="0,20,10,0" Grid.Row="2" Background="#FF5C6D7E" Grid.ColumnSpan="2" Grid.Column="1" Grid.RowSpan="2"/>
		<Label Content="Remote Inspection Unit" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="30" Width="300" FontSize="16" FontWeight="Bold" Margin="296,0,193.5,0" FontFamily="Microsoft JhengHei UI Light"/>
		
		<Grid HorizontalAlignment="Left" Height="229" Margin="15,268,0,0" Grid.Row="1" VerticalAlignment="Top" Width="430" Grid.RowSpan="3">
		
		<!-- controls -->

			<Button x:Name="upButton" HorizontalAlignment="Left" Margin="97,50,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="Transparent">
			<StackPanel>
				<Image Source="icon/uparrow.png" Style="{DynamicResource controlImage}"/></StackPanel></Button>
			<Button x:Name="downButton" HorizontalAlignment="Left" Margin="97,147,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="Transparent" >
			<StackPanel>
				<Image Source="icon/uparrow.png" Style="{DynamicResource controlImage}" RenderTransformOrigin="0.5,0.5" Margin="0" >
					<Image.RenderTransform><TransformGroup>
							<RotateTransform Angle="179.508"/>
							<TranslateTransform Y="5"/>
						</TransformGroup></Image.RenderTransform>
				</Image></StackPanel></Button>
			<Button x:Name="leftButton" HorizontalAlignment="Left" Margin="45.833,102,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="Transparent" >
			<StackPanel>
				<Image Source="icon/leftarrow.png" Style="{DynamicResource controlImage}" >	
				</Image></StackPanel></Button>
			<Button x:Name="rightButton" HorizontalAlignment="Left" Margin="147.575,101.999,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="#00000000">
			<StackPanel>
				<Image Source="icon/rightarrow.png" Style="{DynamicResource controlImage}" RenderTransformOrigin="1,0.5" /></StackPanel></Button>

			<!-- other buttons -->
			<Button Content="Capture" Style="{StaticResource theButton}" HorizontalAlignment="Left" Margin="297.5,71.08,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.24,0.601"/>
            <Button Content="Manual" Style="{StaticResource theButton}" HorizontalAlignment="Left" Margin="297.5,108.13,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Recall" Style="{StaticResource theButton}" HorizontalAlignment="Left" Margin="297.561,141.373,0,0" VerticalAlignment="Top" Width="74.939" RenderTransformOrigin="0.5,0.5" Height="20.627"></Button>
		</Grid>
		<Label Content="Camera View" HorizontalAlignment="Left" Margin="147.5,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light" FontSize="16" Height="31.28" Width="105.773"/>
		<Label Content="Map View" HorizontalAlignment="Left" Margin="166.74,10.96,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32.5" Width="83.533" FontFamily="Microsoft JhengHei UI Light" FontSize="16" Grid.Column="1"/>
		<Label Content="System Log" Grid.Column="1" HorizontalAlignment="Left" Margin="166.74,291.68,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" FontFamily="Microsoft JhengHei UI Light" Grid.RowSpan="2"/>
		
			<!-- devices and settings -->

		<DockPanel Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Right" Height="31.28"  Grid.Row="1" VerticalAlignment="Top" Margin="0,7.72,10,0" Width="157">
			
			<Button Name="device_Btn"
					Click="devices_Click"
					ContextMenuService.IsEnabled="False" Height="22" Width="90" Margin="0,0,10,0" Style="{DynamicResource controlButton}" FontFamily="Microsoft JhengHei UI Light" Background="#00000000">
				<StackPanel>
				<TextBlock>devices<Image Source="icon/bdown.png" Style="{DynamicResource controlImage}" Height="22" /></TextBlock>
				</StackPanel>
				<Button.ContextMenu>
					<ContextMenu >
						<MenuItem Header="Enable/Disable Bluetooth"/>
						<MenuItem Header="Search..." x:Name="searchBtn" Click="searchBtn_Click"/>
					</ContextMenu>
				</Button.ContextMenu>
			</Button>
			<Button Name="settings_Btn" Height="20" Style="{DynamicResource controlButton}" ToolTip="Settings" Background="#00000000">
				<Image Source="icon/settings.png" Style="{DynamicResource controlImage}" />
			</Button>
		</DockPanel>
	</Grid>
</Window>
