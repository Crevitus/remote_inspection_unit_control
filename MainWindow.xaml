<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="remote_inspection_unit_control.MainWindow"
        Title="MainWindow" 
		x:Name="mainWindow"
		Height="600" 
		Width="900"
		WindowStartupLocation="CenterScreen" 
		ResizeMode="NoResize"
		Style="{StaticResource basicWindow}" Background="#FFEAEAEA"
		>


    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            GlassFrameThickness="0,0,0,1"
                            ResizeBorderThickness="5" />
    </shell:WindowChrome.WindowChrome>

	<Grid x:Name="layoutRoot">
		<Grid.Style>
		<Style TargetType="{x:Type Grid}">
      <Style.Triggers>
		<DataTrigger Binding="{Binding ElementName=mainWindow,
                                                   Path=WindowState}" 
                                 Value="Maximized">
								  <Setter Property="Margin" Value="8,8,8,8" />
                    </DataTrigger>
      </Style.Triggers>
    </Style>
	</Grid.Style>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="300" />
			<RowDefinition Height="22" />
			<RowDefinition Height="223.4"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="450" />
            <ColumnDefinition Width="450" />
        </Grid.ColumnDefinitions>
		<MediaElement x:Name="mdePlayer" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,8,0" Width="432" Source="harry2.mp4" Height="240"/>
		<Canvas x:Name="cnvsMap" Grid.Row="1" HorizontalAlignment="Left" Height="240" VerticalAlignment="Top" Width="432" Background="#FF3D78A7" Margin="8,50,0,0" Grid.Column="1" UseLayoutRounding="False"/>
        <Canvas x:Name="cnvsDeleteMe" Grid.Row="1" HorizontalAlignment="Left" Height="240" VerticalAlignment="Top" Width="432" Background="#FF3D78A7" Margin="8,50,0,0" UseLayoutRounding="False"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0" Grid.Column="2" Height="30" Width="78">
			<Button x:Name="btnMinimize" Click="btnMinClick" ToolTip="Minimize" Style="{StaticResource basicButton}" Content="0" FontFamily="Marlett" IsCancel="True" Width="26" />
			<Button x:Name="btnMaximize" Click="btnMaxClick" ToolTip="Maximize" Style="{StaticResource basicButton}" FontFamily="Marlett" Content="1" Width="26"/>
			<Button x:Name="btnClose" Click="btnExitClick" ToolTip="Close"  Style="{StaticResource exitButton}" FontFamily="Marlett" Content="r" Width="26"/>
		</StackPanel>
		<ListBox x:Name="lstLogList" HorizontalAlignment="Right" Height="225.4" VerticalAlignment="Top" Width="434" Margin="0,20,10,0" Grid.Row="2" Background="#FF5C6D7E" Grid.ColumnSpan="2" Grid.Column="1" Grid.RowSpan="2"/>
		<Label Content="Remote Inspection Unit" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="30" Width="300" FontSize="16" FontWeight="Bold" Margin="0,0,0,0" FontFamily="Microsoft JhengHei UI Light"/>
		
		<Grid HorizontalAlignment="Left" Height="229" Margin="15,268,0,0" Grid.Row="1" VerticalAlignment="Top" Width="430" Grid.RowSpan="3">
		
		<!-- controls -->

			<Button x:Name="btnUp" HorizontalAlignment="Left" Margin="97,50,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="#00531717">
			<StackPanel>
				<Image Source="icon/uparrow.png" Style="{DynamicResource controlImage}"/></StackPanel></Button>
			<Button x:Name="btnDown" HorizontalAlignment="Left" Margin="97,147,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="#00531717" >
			<StackPanel>
				<Image Source="icon/uparrow.png" Style="{DynamicResource controlImage}" RenderTransformOrigin="0.5,0.5" Margin="0" >
					<Image.RenderTransform><TransformGroup>
							<RotateTransform Angle="179.508"/>
							<TranslateTransform Y="5"/>
						</TransformGroup></Image.RenderTransform>
				</Image></StackPanel></Button>
			<Button x:Name="btnLeft" HorizontalAlignment="Left" Margin="44.144,102,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="#00531717" >
			<StackPanel>
				<Image Source="icon/leftarrow.png" Style="{DynamicResource controlImage}" >	
				</Image></StackPanel></Button>
			<Button x:Name="btnRight" HorizontalAlignment="Left" Margin="149.463,102,0,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource controlButton}" Background="#00531717">
			<StackPanel>
				<Image Source="icon/rightarrow.png" Style="{DynamicResource controlImage}" >
				</Image></StackPanel></Button>

			<!-- other buttons -->
            <Button Content="Capture" Style="{StaticResource actionButton}" HorizontalAlignment="Right" Margin="0,70,20,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.24,0.601" Height="22"/>
            <Button Content="Manual" Style="{StaticResource actionButton}" HorizontalAlignment="Right" Margin="0,102,20,0" VerticalAlignment="Top" Width="75" Height="22"/>
            <Button Content="Recall" Style="{StaticResource actionButton}" HorizontalAlignment="Right" Margin="0,134,20,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Height="22"></Button>
		</Grid>
        <Label Content="Camera View" HorizontalAlignment="Center" Margin="0,11,0,0" Grid.Row="1" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light" FontSize="16" Height="32.5" Width="105.773" Foreground="Black"/>
		<Label Content="Map View" HorizontalAlignment="Center" Margin="0,11,0,0" Grid.Row="1" VerticalAlignment="Top" Height="32.5" Width="83.533" FontFamily="Microsoft JhengHei UI Light" FontSize="16" Grid.Column="1" Foreground="Black"/>
        <Label Content="System Log" Grid.Column="1" HorizontalAlignment="Center" Margin="0,-8,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="16" FontFamily="Microsoft JhengHei UI Light" Grid.RowSpan="2" Foreground="Black"/>
		
			<!-- devices and settings -->

		<DockPanel Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Right" Height="43.5"  Grid.Row="1" VerticalAlignment="Top" Margin="0,0,10,0" Width="157">
			
			<Button Name="btnDevices"
					Click="btnDevices_Click"
					ContextMenuService.IsEnabled="False" Height="32.5" Width="90" Margin="0,11,10,0" VerticalAlignment="Top" Style="{DynamicResource controlButton}" FontFamily="Microsoft JhengHei UI Light" FontSize="16" Background="#00000000" Foreground="Black">
				<StackPanel>
                    <TextBlock Height="32.5">Devices<Image Source="icon/bdown.png" Style="{DynamicResource controlImage}" Height="32.5" VerticalAlignment="Top" /></TextBlock>
				</StackPanel>
				<Button.ContextMenu>
                    <ContextMenu >
                        <MenuItem Header="Search..." x:Name="searchBtn" Click="btnSearch_Click"/>
					</ContextMenu>
				</Button.ContextMenu>
			</Button>
			<Button Name="btnSettings" Height="20" Style="{DynamicResource controlButton}" ToolTip="Settings" Background="#00000000">
				<Image Source="icon/settings.png" Style="{DynamicResource controlImage}" />
			</Button>
		</DockPanel>
    </Grid>
</Window>
